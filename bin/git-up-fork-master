#!/bin/sh

set -e

basename=$(basename $0)
branch=$(git rev-parse --abbrev-ref HEAD)

function doUpdate {
  if [[ "$(basename $0)" == "git-reup-fork-master" ]]
  then
      git-reup upstream master
  else
      git-up upstream master
  fi
}

git checkout master
doUpdate
git push
git checkout $branch
